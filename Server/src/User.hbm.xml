<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.User" table="burst_ppl_User">
		<meta attribute="class-description">
			This class contains the user detail.
		</meta>
		<id name="username" type="string" column="username">
			<generator class="assigned" />
		</id>
		<set name="buddies" cascade="all" fetch="join">
			<key column="username" />
			<one-to-many class="data.Buddy" />
		</set>
		<property name="hash" column="hash" type="string" />
	</class>
	<class name="data.Buddy" table="burst_ppl_Buddy">
		<meta attribute="class-description">
			This class contains the buddy records.
		</meta>
		<composite-id>
			<key-property name="username" type="string" column="username" />
			<key-property name="buddyname" type="string" column="buddyname" />
			<generator class="assigned" />
		</composite-id>
	</class>
</hibernate-mapping>